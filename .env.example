# =============================================================================
# Julia Configuration
# =============================================================================
# Paths can be absolute or relative to PROJECT_ROOT
# Leave empty to use defaults

# Julia depot path (where Julia packages are stored)
# Default: ./julia_depot (relative to project root)
JULIA_DEPOT_PATH=./julia_depot

# Julia project path (where Project.toml/Manifest.toml are)
# Default: ./JuliaProject
JULIA_PROJECT_PATH=./JuliaProject

# Julia script for spectral sparsification
# Default: ./sparsify_graph.jl
JULIA_SPARSIFY_SCRIPT=./sparsify_graph.jl

# Julia version (used for local installation detection)
JULIA_VERSION=1.10.2

# =============================================================================
# Julia Optimization Flags
# =============================================================================
# These are passed to Julia when running spectral sparsification

# Number of threads (auto = use all available cores)
JULIA_NUM_THREADS=auto

# Optimization level (0-3, higher = more optimization)
# Note: 2 is default and usually best; 3 can cause longer compile times
JULIA_OPTIMIZE=3

# Bounds checking (yes/no)
JULIA_CHECK_BOUNDS=no

# Math mode (ieee/fast)
JULIA_MATH_MODE=ieee

# Startup file (no = faster startup by skipping ~/.julia/config/startup.jl)
JULIA_STARTUP_FILE=no

# History file (no = don't load REPL history, slightly faster)
JULIA_HISTORY_FILE=no

# Compile mode (yes = normal compilation)
# Options: yes, no, all, min
JULIA_COMPILE=yes

# =============================================================================
# Directory Configuration (optional)
# =============================================================================
# Uncomment to override defaults

# DATASETS_DIR=./datasets
# RESULTS_DIR=./results
# TEMP_DIR=./temp
